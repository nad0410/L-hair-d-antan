{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}
{#  #}
{% block body %}
	{# On inclut les partials _header qui contiennent l'Header qui sera sur toutes les pages #}
	{% include "partials/_header.html.twig" %}
		{# Balise sémantique qui servira de base pour les autres balise #}
	<main class="main-produits">
		{# Le code suivant gère la selection de categories #}
			<div class="div-selector-category"> <label class="choice_category_label" for="choice_category">
				<h3>Categories</h3>
			</label>

			<select name="choice_category" id="choice_category">
				<option value="0">Non definit</option>
				{% for categorie in categories %}
					<option value="{{categorie.id}}">{{categorie.name}}</option>
				{% endfor %}
			</select>
		</div>
		{# -------------------- #}
		{# Le code suivant gère l'affichage des produits #}
		<div class="main-div-produits">
			<div class="back-div-produits">
				{% for produit in produits %} {# Cette balise fait une boucle sur les informations envoyer depuis la route #}
					{# Le code ci-dessous fais en sorte que ça créé une carte à chaque information obtenue #}
						<div class="div-card-produits"> <img src="{{asset('images/produits/')}}{{produit.imgProduits}}" alt="Image Produits">
						<h2>{{produit.name}} {# On récupère le nom du produit #} </h2>

						<div class="div-info">
							<h3>{{produit.prix}}€ {# On récupère le prix du produit #}</h3>
							<h3 id="produits-marque">{{produit.marque}} {# On récupère la marque du produit #}</h3>
						</div>
						
					</div>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}

